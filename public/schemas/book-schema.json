{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Course name"
    },
    "id": {
      "type": "string",
      "description": "Course ID"
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Project ID"
          },
          "name": {
            "type": "string",
            "description": "Project name"
          },
          "description": {
            "type": "string",
            "description": "Project description"
          },
          "badge": {
            "type": "string",
            "description": "Optional badge for project (for future Reddit-style rewards)"
          },
          "lessons": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Lesson ID"
                },
                "name": {
                  "type": "string",
                  "description": "Lesson name"
                },
                "type": {
                  "type": "string",
                  "enum": ["lesson", "challenge"],
                  "description": "Lesson type: 'lesson' for regular lessons, 'challenge' for challenges"
                },
                "guide": {
                  "type": "string",
                  "description": "Markdown guide file"
                },
                "py": {
                  "type": "string",
                  "description": "Python code file"
                },
                "hints": {
                  "type": "string",
                  "description": "Optional path to hints markdown file (typically for challenges)"
                },
                "answer": {
                  "type": "string",
                  "description": "Optional path to answer markdown file (typically for challenges)"
                },
                "tests": {
                  "type": "array",
                  "description": "Test cases for the lesson (typically only for challenges)",
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": ["compilation", "output", "input", "variable", "text", "variables"],
                        "description": "Test type: compilation, output, input, variable, text, or variables"
                      },
                      "in": {
                        "oneOf": [
                          {
                            "type": "string",
                            "description": "Single input string"
                          },
                          {
                            "type": "array",
                            "description": "Multiple inputs as array",
                            "items": {
                              "type": "string"
                            }
                          }
                        ]
                      },
                      "out": {
                        "type": "string",
                        "description": "Expected output pattern (supports regex)"
                      },
                      "requiredVariables": {
                        "type": "array",
                        "description": "List of required variable names (for variables type)",
                        "items": {
                          "type": "string"
                        }
                      },
                      "requiredInputs": {
                        "type": "number",
                        "description": "Number of required input() calls (for input type)"
                      },
                      "requiredText": {
                        "type": "array",
                        "description": "List of required text patterns in code (for text type)",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "anyOf": [
                      {
                        "required": ["type", "in", "out"]
                      },
                      {
                        "required": ["type"]
                      }
                    ]
                  }
                }
              },
              "required": ["id", "name", "guide", "py"]
            }
          }
        },
        "required": ["id", "name", "description", "lessons"]
      }
    }
  },
  "required": ["name", "id", "projects"]
}